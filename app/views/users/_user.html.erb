<div class="user text-light w-75 d-flex justify-content-center mx-auto py-3">
  <div class="d-flex flex-column justify-content-center">
    <%= link_to user.name, user, class:"user text-light my-2 text-center" %>
  </div>
  <div class="d-flex ml-5">
    <span>
      <%= link_to user_path(user), class:"btn btn-danger rounded-circle mx-2", method: :delete, data: { confirm: "You sure?" } do %>
        <%= fa_icon('trash-alt') %>
      <% end %>
    </span>
  </div>
</div>